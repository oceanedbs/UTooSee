<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentationComponent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include2"
        layout="@layout/content_presentation_component"
        tools:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/mesure"
        android:layout_width="200dp"
        tools:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Mesure"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="top|left"
        tools:width="200dp" />

    <Button
        android:id="@+id/Sumary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sumary"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="right|top"
        tools:layout_width="wrap_content"
        tools:width="200dp" />

    <Button
        android:id="@+id/BottomRoller"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Bottom Roller"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="left|center"
        tools:layout_marginLeft="2dp"
        tools:layout_marginTop="50dp"
        tools:width="200dp" />

    <Button
        android:id="@+id/TripleGrouserShoe"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Triple Groser Shoe"
        android:textAllCaps="false"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="right|center"
        tools:layout_marginTop="350dp"
        tools:textSize="20sp"
        tools:width="400dp" />

</android.support.design.widget.CoordinatorLayout>