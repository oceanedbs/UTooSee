<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summary">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <include
        android:id="@+id/include3"
        layout="@layout/content_summary" />

    <Button
        android:id="@+id/mesure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Measure"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="left|top"
        tools:layout_marginTop="60dp"
        tools:width="200dp" />

    <Button
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Summary"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="right|top"
        android:textColor="#808080"

        tools:width="200dp" />

    <TextView
        android:id="@+id/tripleGrouserShoe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:text="Triple Grouser Shoe"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="top|center" />

    <TextView
        android:id="@+id/bottomRoller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Bottom Roller"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="left|center" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="top|center" />

</android.support.design.widget.CoordinatorLayout>